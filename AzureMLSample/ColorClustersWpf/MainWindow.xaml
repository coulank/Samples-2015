<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ColorClustersWpf" x:Class="ColorClustersWpf.MainWindow"
        Title="Color Clusters" Height="900" Width="600" FontSize="24">
	<Window.Resources>
		<DataTemplate x:Key="AssignmentDataTemplate">
			<ItemsControl ItemsSource="{Binding Value}" ItemsPanel="{DynamicResource ColorsPanelTemplate}" ItemTemplate="{DynamicResource ColorDataTemplate}" Margin="6"/>
		</DataTemplate>
		<ItemsPanelTemplate x:Key="ColorsPanelTemplate">
			<WrapPanel IsItemsHost="True"/>
		</ItemsPanelTemplate>
		<DataTemplate x:Key="ColorDataTemplate">
			<Rectangle Fill="{Binding RGB}" ToolTip="{Binding Name}" Height="40" Width="40" Margin="2"/>
		</DataTemplate>
	</Window.Resources>
	<Window.DataContext>
		<local:AppModel/>
	</Window.DataContext>
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<ComboBox ItemsSource="{Binding OutputCsvs.Value}" SelectedItem="{Binding SelectedOutputCsv.Value, IsAsync=True}" Width="400" Margin="10"/>
		<Viewbox Grid.Row="1" Margin="10">
			<ItemsControl ItemsSource="{Binding Assignments.Value}" ItemTemplate="{DynamicResource AssignmentDataTemplate}" Width="800"/>
		</Viewbox>
	</Grid>
</Window>
